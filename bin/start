#!/usr/bin/env bash

set -e

K8S_VERSION=1.23.4

function start_k8s() {
  kind create cluster --image=kindest/node:v${K8S_VERSION} --config=kind/cluster.yml
}

function print_info() {
  export DNS_ADDR=$(kubectl -n nginx-udp get svc nginx-udp-ingress-nginx-controller -o jsonpath='{.status.loadBalancer.ingress[0].ip}')
  echo
  echo "------"
  echo Update dns settings to include ${DNS_ADDR}
  echo
  echo "------"
  echo "Open http://concourse.infra.local"
  echo "Open http://gitea.infra.local"
}


function main() {
  start_k8s
  kubectl -n kube-system delete cm coredns
  ./bin/tf-apply $1
  print_info
}

main "$@"
